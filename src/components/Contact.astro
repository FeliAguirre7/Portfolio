    <div id="successModal" class="hidden fixed inset-0 flex justify-center items-center bg-black bg-opacity-50">
        <div class="bg-white p-6 rounded-lg shadow-lg text-center">
            <h3 class="text-xl font-bold text-green-600">¡Mensaje Enviado!</h3>
            <p class="mt-2">Tu mensaje ha sido enviado correctamente. ¡Gracias por contactarnos!</p>
            <button onclick="closeModal()" class="mt-4 bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Cerrar</button>
        </div>
    </div>
    
    <script>
        // Función para manejar el envío del formulario
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();  // Prevenir el comportamiento por defecto del formulario
    
            // Limpiar los campos inmediatamente después de hacer clic en "Enviar"
            document.getElementById('email').value = '';  // Limpiar campo de email
            document.getElementById('mensaje').value = '';  // Limpiar campo de mensaje
    
            const form = new FormData(this);  // Crear un objeto con los datos del formulario
    
            // Enviar el formulario usando fetch (AJAX)
            fetch('https://formspree.io/f/mzzpnekq', {  // Asegúrate de que la URL de Formspree sea la correcta
                method: 'POST',
                body: form
            })
            .then(response => {
                if (response.ok) {
                    // Si la respuesta es exitosa, mostramos el modal
                    showModal();
                } else {
                    alert('Hubo un error al enviar el mensaje. Intenta de nuevo.');
                }
            })
            .catch(error => {
                alert('Hubo un problema al enviar el mensaje. Intenta de nuevo.');
                console.error('Error:', error);
            });
        });
    
        // Función para mostrar el modal de éxito
        function showModal() {
            document.getElementById('successModal').classList.remove('hidden');
        }
    
        // Función para cerrar el modal
        function closeModal() {
            document.getElementById('successModal').classList.add('hidden');
        }
    </script>

