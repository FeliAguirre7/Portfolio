<style>
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px; /* Espacio entre los badges */
  }
  .tag-item {
    display: inline-block;
    margin: 0 4px;
  }
</style>
{
    PROJECTS.map(({ title, description, tags, type, media, link, github }) => (
        <article key={title} class="p-5">
            <h3 class="text-red-200/100 p-4 text-xl">{title}</h3>
            <p class="text-white p-2">{description}</p>
            <ul class="tags-container">
            {tags.map((tag) =>
          tag.includes('https://') ? (
            <li key={tag} class="tag-item">
              <img src={tag} alt="Technology logo" class="inline-block mr-4 p-2" />
            </li>
          ) : (
            <li key={tag} class="inline-block mr-2">{tag}</li>
          )
        )}
            </ul>
            {type === "video" ? (
                <iframe
                    width="700"
                    height="500"
                    src={media} // Usa la variable media aquí para el video
                    title={title}
                    frameBorder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowFullScreen
                    class="p-4"
                ></iframe>
            ) : (
            <img
                src={media} // Usa la variable image aquí
                alt={title}
                class="p-4" // Cambia alt para que coincida con el título del proyecto
            />
        )}
            <a href={link} class="text-white p-7" target="_blank" rel="noopener noreferrer">Visitar Proyecto</a>
            <a href={github} class="text-white p-7" target="_blank" rel="noopener noreferrer">Ver en GitHub</a>
        </article>
    ))
}





